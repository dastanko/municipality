%h3 Profile editing

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {:method => :put, :id => "commentform"}) do |f|

  .inputs
    = f.input :name
    = f.input :last_name
    = f.input :email
    = f.input :phone
    - if resource.password_required?
      = f.input :password
      = f.input :password_confirmation

  .actions
    = f.button :submit, "Update"
