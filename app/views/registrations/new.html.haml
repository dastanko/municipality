= title "Registration"

%h2= "Registration"

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true,:html => {:id => "commentform"}) do |f|

  .inputs
    = f.input :name
    = f.input :last_name
    = f.input :email
    = f.input :phone
    = f.input :password
    = f.input :password_confirmation

  .actions
    = f.button :submit