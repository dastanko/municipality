%h3 Sign in

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:id => "commentform"}) do |f|
  .inputs
    = f.input :email
    = f.input :password
  - if devise_mapping.rememberable?
    = f.input :remember_me, :as => :boolean
  .actions
    = f.button :submit