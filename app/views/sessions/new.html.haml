%h3 Sign in

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:id => "commentform"}) do |f|
  .inputs
    = f.input :email
    = f.input :password
  - if devise_mapping.rememberable?
    = f.input :remember_me, :as => :boolean
  .actions
    = f.button :submit

  .providers
    = link_to image_tag("facebook_256.png", :border=>0, :size => '40x40'), user_omniauth_authorize_path(:facebook)
    = link_to image_tag("twitter_256.png", :border=>0, :size => '40x40'), user_omniauth_authorize_path(:twitter)