!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title
      = "Municipality#{(" | " + yield(:title)) unless yield(:title).blank?}"
    %meta(name="description" content="An Municipality project site of Bishkek city.")
    %meta(name="keywords" content="bishkek, municipality, issues")

    = yield :head

    = stylesheet_link_tag 'style', :media => 'screen'
    = stylesheet_link_tag 'effects', 'default', 'custom', 'reset', 'colorbox', 'contactable', :media => 'all'

    = javascript_include_tag :defaults
    = javascript_include_tag 'client-side-validations', 'jquery.contactable', 'jquery.validate.pack'
    = csrf_meta_tag

  %body
    #container
      = render "layouts/header"

      = render "layouts/featured"

      = render "layouts/content"

      = render "layouts/footer"
