- if !attachment.id.nil?
  %li{:id => "attachment_#{attachment.id}"}
    %a{:href => attachment.url}
      = attachment.name
    (#{attachment.size/1.kilobyte}KB)
    = link_to "Remove", asset_path(:id => attachment.id), :method => :delete, :confirm => "Are you sure you want to delete " + attachment.name + "?", :remote => true, :class => 'remove_file'